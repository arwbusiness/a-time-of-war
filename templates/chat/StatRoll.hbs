<div class="bt-roll">
	<div style="height:20px">
		<img style="height:20px; width:20px; float:left" src="{{img}}" />
		<h3>{{speaker}}</h3>
	</div>
	<!--<span style="font-style:italic; font-size:11.5px">{{flavor}}</span>-->
	<span style="font-style:italic; font-size:11.5px">
		Rolling 
		{{#if (eq rollType "skill")}}
			{{#if (in baseSkill none "none")}}
				{{localize name}}
			{{else}}
				{{localize baseSkill}}/{{name}}
			{{/if}}
			{{#if (eq untrained true)}}
				 (untrained)
			{{/if}}
		{{else}}
			{{localize name}}
		{{/if}}:
	</span>
	<br>
		{{#each dice as |die key|}}
		<div class="chatDice {{#if ( eq @index ../lowest )}}dropped{{/if}}" style="{{#if (eq key ../lowest)}}color:grey{{else if (eq die 6)}}color:green{{else if (eq die 1)}}color:red{{/if}}">
			{{die}}
		</div>
		{{/each}}
		<div class="chatRollMod">
			<span>{{#if (gt rollMod 0)}}+{{/if}}{{rollMod}}</span>
			<span style="padding-left:12px !important">{{#if (ge result tn)}}<span style="color:darkgreen">{{else}}<span style="color:darkred">{{/if}} = {{result}}</span></span>
		</div>
		<div class="chatTN">
			TN: {{tn}}{{#if (eq rollType "skill")}}/{{actionType}}{{/if}}
		</div>
	<br><br>
	<div class="chatRollMod">
		<span style="font-style:italic !important; font-size:16px !important; padding-top:1px !important; {{#if isSuccess}}color:green{{else}}color:red{{/if}}">{{successOrFail}} </span><span style="font-style:normal !important; font-size:16px !important; padding-top:1px !important"> by Mo{{#if (ge margin 0)}}S {{else}}F {{/if}}{{margin}}!</span>
	</div>
	{{#if isStunning}}
	<br>
	<div style="width:108px">
		<span>Stunning success!</span>
	</div>
	{{else if isFumble}}
	<br>
	<div style="width:108px">
		<span>Fumble!</span>
	</div>
	{{/if}}
</div>